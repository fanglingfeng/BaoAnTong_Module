<resources>

    <style name="tj_myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="tj_AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="tj_AppTheme" parent="tj_AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- service guide style -->
    <style name="tj_service_guide">
        <item name="android:background">@drawable/tj_selecter_box</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:checked">true</item>
    </style>
    
    <!-- service outlets style -->
    <style name="tj_service_outlets_radio">
        <item name="android:background">@drawable/tj_radio_bg</item>
        <item name="android:textColor">@color/tj_radio_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="tj_AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/tj_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/tj_push_bottom_out</item>
    </style>
    
    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableStart">@drawable/tj_search_icon</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">请输入事项名称/编号</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_show_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_hide_anim</item>
    </style>
