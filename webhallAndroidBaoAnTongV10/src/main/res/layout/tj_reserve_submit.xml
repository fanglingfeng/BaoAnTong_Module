<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4ebf3"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/tj_nav_bg" >

		<RelativeLayout 
	    	android:id="@+id/back"
	    	android:layout_width="50dp"
	    	android:layout_height="match_parent">
        	<ImageView            
            	android:layout_width="25dp"
            	android:layout_height="25dp"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="10dp"
            	android:background="@drawable/tj_back_selector" />
		</RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="选择预约时间"
            android:textColor="@color/tj_white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/tj_home"
            android:visibility="invisible" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="预约人：" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:editable="false"
                    android:focusable="false"
                    android:background="@drawable/tj_editxt_bg"
                    android:maxLength="14"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="预约电话：" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/tj_editxt_bg"
                    android:editable="false"
                    android:focusable="false"
                    android:maxLength="14"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="证件号码：" />

                <EditText
                    android:id="@+id/code"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/tj_editxt_bg"
                    android:editable="false"
                    android:focusable="false"
                    android:maxLength="20"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="行政区划：" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="fill_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="21dp"
                    android:background="@drawable/tj_register_spinner"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp" />

                <EditText
                    android:id="@+id/text1"
                    android:layout_width="fill_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="21dp"
                    android:editable="false"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="预约部门：" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="fill_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="21dp"
                    android:background="@drawable/tj_register_spinner"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp" />

                <EditText
                    android:id="@+id/text2"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="21dp"
                    android:editable="false"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:textSize="14sp"
                    android:background="@drawable/tj_editxt_bg"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="预约事项：" />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="fill_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="21dp"
                    android:background="@drawable/tj_register_spinner"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp" />

                <EditText
                    android:id="@+id/text3"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="21dp"
                    android:editable="false"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:background="@drawable/tj_editxt_bg"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="预约日期：" />

                <Spinner
                    android:id="@+id/spinner4"
                    android:layout_width="fill_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="21dp"
                    android:background="@drawable/tj_register_spinner"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp" />

                <EditText
                    android:id="@+id/text4"
                    android:layout_width="fill_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="21dp"
                    android:editable="false"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="right"
                    android:text="时间段：" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="fill_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="21dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:checkedButton="@+id/ataaw1"
                        android:orientation="vertical" >
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约须知："
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                                android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.5"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:text="预约时间：每个事项可提前在办事前1天上网预约。\n优先叫号：预约生效后，申请人凭身份证或手机号码到政务服务中心优先取号。"
                    android:textColor="@color/tj_orange" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
    
            android:id="@+id/submit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/tj_online_booking_selector"
            android:text="提交"
            android:textColor="@color/tj_white"
            android:textSize="17sp" />

</LinearLayout>