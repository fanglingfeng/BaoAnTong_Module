<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View"/>

        <import type="android.text.TextUtils"/>


        <variable
            name="zzdatabean"
            type="com.tjsoft.webhall.entity.ZZDATABean"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/ios_default"
                  android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0.3"
            android:background="@color/tj_dialog_divider"/>

        <LinearLayout
            android:id="@+id/title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/space_10">

            <ImageView android:layout_width="@dimen/space_5" android:layout_height="@dimen/space_20"
                       android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/title_value_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_weight="1"
                android:textColor="@color/tj_black"
                android:textSize="@dimen/text_size_17"/>
            <ImageView android:id="@+id/status_iv"
                       android:layout_width="@dimen/space_15"
                       android:layout_height="@dimen/space_15" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout  android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@color/white"
                          android:gravity="center_vertical" android:orientation="horizontal"
                          android:padding="@dimen/space_10">

                <TextView android:id="@+id/tv_idcode" android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="@dimen/space_10" android:layout_weight="1"
                          android:textColor="@color/tj_black"/>
                <LinearLayout android:id="@+id/rl_chakan" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:background="@drawable/btn_toolbar_tv_selector"
                              android:gravity="center_vertical" android:orientation="horizontal"
                              android:padding="@dimen/space_5">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/chakan"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="@dimen/space_5" android:text="查看"
                              android:textColor="@color/colorPrimary"/>


                </LinearLayout>
            </LinearLayout>
            <ImageView android:layout_width="match_parent" android:layout_height="@dimen/space_2" android:background="@color/ios_default"/>

            <android.support.v7.widget.RecyclerView android:layout_marginBottom="@dimen/space_10" android:id="@+id/rv_filelist" android:layout_width="match_parent"
                                                    android:layout_height="wrap_content">


            </android.support.v7.widget.RecyclerView>


        </LinearLayout>
        <ImageView android:layout_width="match_parent" android:layout_height="@dimen/space_1" android:background="@color/ios_default"/>

    </LinearLayout>
</layout>