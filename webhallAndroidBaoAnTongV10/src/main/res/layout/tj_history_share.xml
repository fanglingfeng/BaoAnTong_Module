<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/tj_white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/tj_nav_bg">

                <RelativeLayout
                    android:id="@+id/back"
                    android:layout_width="50dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/tj_back_selector" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="填写基本资料"
                    android:textColor="@color/tj_white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/ems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:padding="10dp"
                    android:text="领证方式"
                    android:textColor="@color/tj_white"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnFlow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:padding="10dp"
                    android:text="查看进度"
                    android:textColor="@color/tj_white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/help"
                    android:layout_width="28dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/tj_help_selector" />

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/help"
                    android:background="@drawable/tj_home"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvIdea"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/tj_business_return_detail_bg"
                android:padding="10dp"
                android:text="办理意见"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/titleBar"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@color/tj_white">
                <RelativeLayout
                    android:id="@+id/user_info_title_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/finish_userinfo"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/tj_right_no" />

                    <TextView
                        android:id="@+id/text0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/finish_userinfo"
                        android:gravity="center_horizontal"
                        android:text="①申报人信息"
                        android:textColor="@color/tj_my_green" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/base_form_title_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/finish_form"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/tj_right_no" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/finish_form"
                        android:gravity="center_horizontal"
                        android:text="②基本表单"
                        android:textColor="@color/tj_tab_text" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/upload_file_title_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/finish_file"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/tj_right_no" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/finish_file"
                        android:gravity="center_horizontal"
                        android:text="③上传资料"
                        android:textColor="@color/tj_tab_text" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lzfs_title_rl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/finish_lzfs"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/tj_right_no" />

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/finish_lzfs"
                        android:gravity="center_horizontal"
                        android:text="④领取证照"
                        android:textColor="@color/tj_tab_text" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f0f0f0">

                <ImageView
                    android:id="@+id/cursor"
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="@color/tj_my_green"
                    android:contentDescription="@null"
                    android:scaleType="matrix" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="1.5dp"
                    android:background="#dddddd" />
            </RelativeLayout>

            <com.tjsoft.webhall.lib.NoTouchViewPage
                android:id="@+id/vPager"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:background="@color/tj_white"
                android:flipInterval="30"
                android:persistentDrawingCache="animation" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity=""
                    android:padding="5dp"
                    android:text="  注：带'*'号的都为必填项和必须提交的材料"
                    android:textColor="@color/tj_red"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:text="  " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:visibility="gone"
                        android:textColor="@color/red"
                        android:text="@string/fuzha_tip"
                        android:id="@+id/tv_fuzha_tip"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_scan"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/tj_erweima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/applyLay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/goBack2"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_toolbar_tv_selector"
                        android:text="上一步"
                        android:textColor="@color/tj_blue_btn_slid"
                        android:textSize="17sp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/applySave"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_toolbar_tv_selector"

                        android:text="暂存"
                        android:textColor="@color/tj_blue_btn_slid"
                        android:textSize="17sp" />

                    <Button
                        android:id="@+id/applySubmit"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/tj_blue_btn_shape"
                        android:text="申报"
                        android:textColor="@color/tj_white"
                        android:textSize="17sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/next"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn"
                        android:text="下一步"
                        android:textColor="@color/tj_white"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/applyLayNoPre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="您是否需要申报此事项？"
                android:textColor="@color/tj_white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#bdbabd"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/applySaveNoPre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="暂存" />

                <Button
                    android:id="@+id/applySubmitNoPre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="申报" />

                <Button
                    android:id="@+id/exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="取消" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>