<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tj_white" >

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/tj_nav_bg" >

        <Button
            android:id="@+id/tj_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tj_back_selector" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="@color/tj_white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/guide"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/tj_guide"
            android:visibility="invisible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/notice"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@id/bar"
        android:layout_margin="5dp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/smile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="温馨提示"
                android:textColor="#f3b642"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/tj_gray" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1、您办理的业务可在线申报，如果您希望前往大厅现场办理，请点击“网上预约”。"
            android:textColor="@color/tj_gray"
            android:textSize="17sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2、对于复杂的在线表单，请登录宝安区网上办事大厅（http://bsdt.baoan.gov.cn）进行申报。"
            android:textColor="@color/tj_gray"
            android:textSize="17sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="3、领取证照方式分为网上打印、现场领取、速递服务，请根据事项业务要求进行选择。"
            android:textColor="@color/tj_gray"
            android:textSize="17sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="4、申请成功后，请使用业务流水号查询办理进度。如果需要现场核验材料。可前往宝安区行政服务大厅。"
            android:textColor="@color/tj_gray"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/applyLay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/tj_ok"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/tj_online_booking_selector"
            android:text="我知道了"
            android:textColor="@color/tj_white"
            android:textSize="17sp" />
    </LinearLayout>

    <CheckBox
        android:textColor="@color/tj_gray"
        android:id="@+id/cb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/notice"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="10dp"
        android:text="下次不再提醒" />

</RelativeLayout>