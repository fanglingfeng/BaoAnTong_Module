<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/bg_spinner" android:state_window_focused="false"/>

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:drawable="@color/colorPrimary" android:state_checked="true" android:state_focused="true" android:state_pressed="true"/>
    <item android:drawable="@color/colorPrimary" android:state_selected="true" android:state_focused="true"/>
    <item android:drawable="@color/colorPrimary" android:state_focused="true" android:state_pressed="true"/>
    <item android:drawable="@color/tran"/>
</selector>
